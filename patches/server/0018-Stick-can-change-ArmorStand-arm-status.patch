     @GlobalConfig(name = "redstone-wire-dont-connect-if-on-trapdoor", category = {"features"})
     public static boolean redstoneDontCantOnTrapDoor = false;
 
+    @GlobalConfig(name = "stick-change-armorstand-arm-status", category = {"utils"})
