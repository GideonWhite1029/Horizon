+            this.setDeltaMovement(this.random.nextDouble() * 0.2D - 0.1D, 0.2D, this.random.nextDouble() * 0.2D - 0.1D);
+        }
+        // Horizon end
         this.setItem(stack);
         // Paper end - Don't use level random in entity constructors
     }
